package stepDefinitions;

import org.junit.runner.RunWith;

import cucumber.api.PendingException;
import cucumber.api.java.en.And;
import cucumber.api.java.en.Given;
import cucumber.api.java.en.Then;
import cucumber.api.java.en.When;
import cucumber.api.junit.Cucumber;

@RunWith(Cucumber.class)
public class funcionalidadesStepDefinition {
	
	@Given("^O usuario se conecta no site$")
    public void o_usuario_se_conecta_no_site() throws Throwable {
        throw new PendingException();
    }

    @Given("^O usuario acessa o menu da programação diária$")
    public void o_usuario_acessa_o_menu_da_programao_diria() throws Throwable {
        throw new PendingException();
    }

    @Given("^O usuario seleciona a serie desejada$")
    public void o_usuario_seleciona_a_serie_desejada() throws Throwable {
        throw new PendingException();
    }

    @Given("^Realizar a desconexão no site$")
    public void realizar_a_desconexo_no_site() throws Throwable {
        throw new PendingException();
    }

    @When("^O site carrega a página inicial com sucesso$")
    public void o_site_carrega_a_pgina_inicial_com_sucesso() throws Throwable {
        throw new PendingException();
    }

    @When("^Clicar no botão para adicionar a série$")
    public void clicar_no_boto_para_adicionar_a_srie() throws Throwable {
        throw new PendingException();
    }

    @When("^O usuario seleciona a lista criada$")
    public void o_usuario_seleciona_a_lista_criada() throws Throwable {
        throw new PendingException();
    }

    @When("^Localizar a seção \"([^\"]*)\"$")
    public void localizar_a_seo_something(String strArg1) throws Throwable {
        throw new PendingException();
    }

    @Then("^O site exibe a listagem com os episodios$")
    public void o_site_exibe_a_listagem_com_os_episodios() throws Throwable {
        throw new PendingException();
    }

    @Then("^Validar que a serie foi adicionada com sucesso$")
    public void validar_que_a_serie_foi_adicionada_com_sucesso() throws Throwable {
        throw new PendingException();
    }

    @Then("^O site exibe as informações da serie$")
    public void o_site_exibe_as_informaes_da_serie() throws Throwable {
        throw new PendingException();
    }

    @And("^Preencher os dados solicitados pelo site$")
    public void preencher_os_dados_solicitados_pelo_site() throws Throwable {
        throw new PendingException();
    }

    @And("^Clicar no botão de confirmação$")
    public void clicar_no_boto_de_confirmao() throws Throwable {
        throw new PendingException();
    }

    @And("^O usuario clica na serie mais vista$")
    public void o_usuario_clica_na_serie_mais_vista() throws Throwable {
        throw new PendingException();
    }


}
